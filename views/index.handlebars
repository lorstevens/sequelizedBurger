<div class = "container">
  <div class ="row">

    <div class="col-md-6">
      <h1>Burger Menu:</h1>
      <ul style="list-style: none;">
        {{#each burgers}}
          {{#unless devoured}}
          {{> burger-block devour=true}}
          {{/unless}}
        {{/each}}
      <ul>
      </div>


    <div class="col-md-6">
      <h1>This is what you ate:</h1>
      <ul style="list-style: none;">
      {{#each burgers}}
        {{#if devoured}}
          {{> burger-block devour=false}}
        {{/if}}
      {{/each}}
      </ul>
      </div>
      </div>



    <div class="col-md-12">
      <form class="create-form">

      <div class="form-group">
        <label for="burg"><h2>Add a Burger:</h2></label>
        <input type="text" id="burg" name="name">
      </div>

      <button type="submit">Add Burger</button>
      </form>
    </div>
</div>